    <RelativeLayout android:id="@+id/devicedetailvalues"
        android:layout_toRightOf="@+id/devicedetailtexts"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <TextView
        android:id="@+id/phonemodelvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": phonemodeltext" 
        android:textColor="#ffffff"/>
        
        <TextView
        android:id="@+id/androidversionvalue"
        android:layout_below="@+id/phonemodelvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": phonemodeltext" 
        android:textColor="#ffffff"/>
        
        <TextView
        android:id="@+id/brandvalue"
        android:layout_below="@+id/androidversionvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": phonemodeltext" 
        android:textColor="#ffffff"/>
        
        <TextView
        android:id="@+id/deviceidvalue"
