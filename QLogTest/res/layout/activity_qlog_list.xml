        android:text=": phonemodeltext" 
        android:textColor="#ffffff"/>
        
        <TextView
        android:id="@+id/appidvalue"
        android:layout_below="@+id/deviceidvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": phonemodeltext" 
        android:textColor="#ffffff"/>
        
     </RelativeLayout>

    <TextView
        android:id="@+id/text"
        android:layout_below="@+id/devicedetailtexts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="Log files:" />
    
    <Button android:id="@+id/sendmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/devicedetailtexts"
        android:layout_alignParentRight="true"
        android:background="#ffffffff"
        android:text="Send selected logs"/>
    
    <ListView
        android:id="@+id/loglist"
        android:layout_below="@+id/text"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"/>

</RelativeLayout>